<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Team Assistant logs -->
    <logger name="teamassistant" level="INFO"/>

    <!-- Оставляем только предупреждения и ошибки от библиотек -->
    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
