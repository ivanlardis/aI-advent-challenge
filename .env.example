OPENROUTER_API_KEY=your_api_key_here
OPENROUTER_MODEL=tngtech/deepseek-r1t2-chimera:free
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# MCP Servers Endpoints
MCP_REMINDER_ENDPOINT=http://reminder-mcp-server:1221/mcp
MCP_REMINDER_HOST=localhost:1221
MCP_EMAIL_ENDPOINT=http://email-mcp-server:1222/mcp
MCP_EMAIL_HOST=localhost:1222
MCP_DOCKER_ENDPOINT=http://docker-mcp-server:1223/mcp
MCP_DOCKER_HOST=localhost:1223

POSTGRES_USER=lardis
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=lardis_db
POSTGRES_PORT=5432

APP_PORT=8000
LOG_LEVEL=INFO
SQL_ECHO=false

# Chainlit Authentication (для отображения истории диалогов в UI)
CHAINLIT_USERNAME=admin
CHAINLIT_PASSWORD=admin
CHAINLIT_AUTH_SECRET=your_secret_here_run_chainlit_create_secret

# Mailtrap API (для email MCP сервера)
MAILTRAP_API_TOKEN=your_mailtrap_api_token_here
MAILTRAP_SENDER_EMAIL=hello@demomailtrap.com
MAILTRAP_SENDER_NAME=Lardis Bot

# Email для отправки сводки напоминаний
SUMMARY_EMAIL_TO=your_email@example.com

# RAG Filtering Configuration
RAG_MIN_SCORE=0.7          # Минимальный порог релевантности (0.0-1.0)
RAG_FILTER_ENABLED=true    # Включить фильтр по умолчанию
RAG_TOP_K=3                # Количество результатов до фильтрации
